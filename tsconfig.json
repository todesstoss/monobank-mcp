{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "noEmit": true,
    "target": "esnext",
    "module": "nodenext",
    "rewriteRelativeImportExtensions": true,
    "erasableSyntaxOnly": true,
    "verbatimModuleSyntax": true,
    "strictNullChecks": true,
    "resolveJsonModule": true
  }
}
